<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MultiBrowserTesting" parallel="tests" thread-count="2">
<listeners>
<listener class-name="generate.report.Listeners"></listener>
</listeners>
  <test  name="ChromeTest">
  <parameter name="browser" value="Chrome"></parameter>
    <classes>
      <class name="test.script.LoginTest">
      <methods>
      <include name="verifyTheUserIsAbleToLoginUsingValidCredentials"> </include> 
       </methods>
      </class>
    </classes>
  </test> 
  
  <test  name="EdgeTest">
  <parameter name="browser" value="Edge"></parameter>
    <classes>
      <class name="test.script.LoginTest">
      <methods>
      <include name="verifyTheUserIsAbleToLoginUsingValidCredentials"> </include> 
       </methods>
      </class>
    </classes>
  </test> 
</suite> 
